<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" width="100" height="18" borderVisible="false" backgroundAlpha="0">
	<s:layout>
		<s:HorizontalLayout gap="2" paddingLeft="10" verticalAlign="middle" horizontalAlign="left"/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import control.SchedulePanel;
			
			import mx.controls.Alert;
			import mx.core.FlexGlobals;
			import mx.managers.PopUpManager;
			[Bindable]
			public var color:Number = 0xffffff;
			[Bindable]
			public var scheduleName : String = "开会";
			
			[Bindable]
			public var scheduleId:String="21";
			
			[Bindable]
			public var scheduleData:Object = null;
			
			public var fun:Function=null;
			
			
			private function openSchedule(e:MouseEvent):void{
				if(!(e.target is LinkButton)){
					return;
				}
				if(fun!=null){
					fun();
				}else{
					var s:SchedulePanel = PopUpManager.createPopUp(FlexGlobals.topLevelApplication as DisplayObject,SchedulePanel,false) as SchedulePanel;
					s.schedulData = scheduleData;
					PopUpManager.centerPopUp(s);
				}
				
				
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:BorderContainer  width="10" height="10"  backgroundColor="{color}" borderVisible="true" borderStyle="solid" borderColor="#CCCCCC" >
		
	</s:BorderContainer>
	<mx:LinkButton id="linkScheduleItem" label="{scheduleName}" click="openSchedule(event)" >
		
	</mx:LinkButton>
</s:BorderContainer>
